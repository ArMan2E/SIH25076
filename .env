# DATABASE
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=krishi
POSTGRES_USER=krishi
POSTGRES_PASSWORD=krishi_pass
DATABASE_URL=postgresql+psycopg2://krishi:krishi_pass@localhost:5432/krishi

# CELERY / REDIS
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=${REDIS_URL}
CELERY_RESULT_BACKEND=${REDIS_URL}

# TELEPHONY (Twilio recommended for testing; Exotel/Knowlarity for Indian toll-free)
TW_SID=your_twilio_sid
TW_TOKEN=your_twilio_token
TW_FROM=+1XXXXXXXXXX

# LLM / RAG
USE_OPENAI=0
OPENAI_API_KEY=your_openai_key_here

# LOCAL OPTIONS
USE_GOOGLE_TTS=0
USE_GOOGLE_STT=0

# HOST for serving TTS files if used
TTS_HOST=http://localhost:8000/static/tts

# VECTOR DB path (for RAG)
VECTOR_DB_DIR=./data/vector_db
